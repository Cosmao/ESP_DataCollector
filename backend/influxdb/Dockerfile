FROM influxdb:2

COPY influxdb.conf /etc/influxdb2/

ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=admin
ENV DOCKER_INFLUXDB_INIT_PASSWORD=qwerty123
ENV DOCKER_INFLUXDB_INIT_ORG=iot23 
ENV DOCKER_INFLUXDB_INIT_BUCKET=buckit
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=MyInitialAdminToken0==
