// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
    "name": "System Integration IoT",
  
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  
    "remoteUser": "root",
  
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {
        "version": "latest",
        "enableNonRootDocker": "true",
        "moby": "true"
      },
      "ghcr.io/devcontainers/features/node:1.6.0": {}
    },
  
    // Run build script for building front & backend containers with docker compose
    "postCreateCommand": "chmod +x ./.devcontainer/install.sh && /bin/bash ./.devcontainer/install.sh",
  
    // VSCode Tools
    "customizations": {
      "vscode": {
        "extensions": [
          "Vue.volar",
          "Syler.sass-indented",
          "esbenp.prettier-vscode",
          "rvest.vs-code-prettier-eslint",
          "dbaeumer.vscode-eslint",
          "christian-kohler.path-intellisense",
          "formulahendry.auto-rename-tag",
          "bierner.markdown-preview-github-styles",
          "vscjava.vscode-gradle",
          "vscjava.vscode-java-pack",
          "redhat.java",
          "cweijan.vscode-mysql-client2",
          "ms-azuretools.vscode-docker"
        ]
      }
    }
  }